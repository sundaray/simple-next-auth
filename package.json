{
  "name": "simple-next-auth",
  "version": "0.0.1",
  "description": "A simple authentication library for Next.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "vitest",
    "test": "vitest run",
