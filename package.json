  "author": "Hemanta Sundaray hemantasundaray.com",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.13.1",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.9.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.2"
  },
  "dependencies": {
    "jose": "^6.1.0",
    "neverthrow": "^8.2.0"
  }
